<section class="hero">
	<div class="hero--background" style="background-image: url('{{photo}}')">
		<div class="hero--text">
			<h3 class="hero--title">{{locationName}}<h3>
		</div>
	</div>
</section>
<section>
  <div class="row">
    {{#each interests}}
      <div class="col s12 m6">
        <div class="card sticky-action">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src="{{this.photo}}">
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">{{this.name}}
              <i class="material-icons right">more_vert</i>
            </span>
            <p>{{this.description}}</p>
            <br>
            {{#if this.link}}
            <p>
              <a href="{{this.link}}" target="_blank">View more info</a>
            </p>
            {{/if}}
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4 activator">{{this.name}}
              <i class="material-icons right">close</i>
            </span>
            <p>{{this.description}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</section>
